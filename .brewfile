# Configure where our applications go
cask_args appdir: '/Applications'

# install scripts we want
brew 'wget'
brew 'git'

# get brew cask for apps
tap 'caskroom/cask'

# install the apps we want
cask 'atom'
cask 'google-chrome'
cask 'iterm2'
cask 'alfred'
cask 'spotify'
cask 'caffeine'
cask 'slack'
